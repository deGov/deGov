{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set classes = [
  'address',
  'clearfix',
]
%}
<article{{ attributes.addClass(classes) }}>
  {{ content.contextual_links }}
  <h2 class="address__headline">{{ name }}</h2>
  <div class="address__label"><strong>{{ 'Postanschrift:'|trans }}</strong></div>
  <div class="address__title"{{ content.field_address_title|quickedit_attr }}>{{ content.field_address_title|field_value }}</div>
  <div class="address__address"{{ content.field_address_address|quickedit_attr }}>{{ content.field_address_address|field_value }}</div>
  {% if content.field_address_email|render %}
    <div class="address__email"{{ content.field_address_email|quickedit_attr }}><span>{{ 'E-Mail:'|trans }} </span>{{ content.field_address_email|field_value }}</div>
  {% endif %}
  {% if content.field_address_fax|field_value %}
    <div class="address__fax"{{ content.field_address_fax|quickedit_attr }}><span>{{ 'Fax:'|trans }} </span>{{ content.field_address_fax|field_value }}</div>
  {% endif %}
  {% if content.field_address_phone|field_value %}
    <div class="address__phone"{{ content.field_address_phone|quickedit_attr }}><span>{{ 'Tel:'|trans }} </span>{{ content.field_address_phone|field_value }}</div>
  {% endif %}
  {% if content.field_tags|field_value %}
    <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
  {% endif %}
  {% if content.usage %}
    <div class="address__usage">
      <h2>{{ 'Usage'|trans }}</h2>
      {{  content.usage }}
    </div>
  {% endif %}
</article>
